{
  "data": {
    "train_path": "./dataset/train",
    "val_path": "./dataset/val",
    "image_height": 64,
    "image_width": 256,
    "charset": "0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
  },
  "model": {
    "hidden_size": 512,
    "attention_heads": 8,
    "num_layers": 4,
    "dropout": 0.1
  },
  "training": {
    "batch_size": 32,
    "learning_rate": 0.0003,
    "weight_decay": 0.0001,
    "epochs": 120,
    "gradient_clip": 1.0,
    "mixed_precision": true
  },
  "optimizer": {
    "type": "AdamW",
    "eps": 1e-8,
    "betas": [0.9, 0.999]
  },
  "scheduler": {
    "type": "CosineAnnealingWarmRestarts",
    "T_0": 15,
    "T_mult": 1,
    "eta_min": 1e-8
  },
  "paths": {
    "model_save": "./models/best_model.pt",
    "checkpoint_dir": "./models",
    "log_dir": "./logs"
  },
  "validation": {
    "early_stopping_patience": 20,
    "save_best_only": true,
    "monitor": "char_accuracy"
  }
}